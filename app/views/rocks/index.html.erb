<%= render 'partials/banner' %>

<div class="card-container m-5">
  <div class="row">
    <% @rocks.each do |rock| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-5" style="border: 2px solid #F148FB;">
        <div class="card custom-card shadow">
          <%= cl_image_tag(rock.photo.key, alt:"Shows a photo of the rock for rent", style: "height: 350px; object-fit: contain;") %>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center m-2">
            <div>
              <h5 class="card-title flex-grow-1"><%= rock.rock_type %></h5>
            </div>
            <div>
              <h5 class="card-title">$<%= rock.daily_price %>/day</h5>
            </div>
          </div>
          <p class="card-text" style="height: 50px; overflow: auto;"><%= rock.description %></p>
          <div class="card-footer text-muted my-2">
            <%= link_to "See more", rock_path(rock), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
