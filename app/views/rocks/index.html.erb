<%= render 'partials/banner' %>

<div class="card-container"></div>
  <div class="row">
    <% @rocks.each do |rock| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card custom-card shadow">
          <%# Line to replace the card-img-top when the logic with cloudinary/ apikey is set %><%#  %>
          <%# <img class="card-img-top" src="<%= rock.photo.attached? ? cl_image_path(rock.photo.key) : '/assets/minitherock.png'" alt="Card image cap" style="height: 350px;"> %>
            <%# use this one for now %>
            <img class="img-fluid" src="/assets/minitherock.png" alt="Card image cap" style="height: 350px; object-fit: cover;">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="card-title flex-grow-1"><%= rock.rock_type %></h5>
              </div>
              <div>
                <h5 class="card-title"><%= rock.daily_price %>$</h5>
              </div>
            </div>
            <p class="card-text" style="height: 50px; overflow: auto;"><%= rock.description %></p>
            <div class="card-footer text-muted">
              <%= link_to "See more", rock_path(rock), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
    

