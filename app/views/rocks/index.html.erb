<%= render 'partials/banner' %>

<% @rocks.each do |rock| %>
  <div class="mt-3">
    <h2>Type: <%= link_to rock.rock_type, rock_path(rock) %></h2>
    <% if rock.photo.attached? %>
      <%= cl_image_tag rock.photo.key, width: 400, height: 300, crop: :fill %>
    <% end %>
    <h4>Daily Price : $<%= rock.daily_price %> </h4>
    <p>Description: <%= rock.description %></p>
    <h6>Owner: <%= rock.user.email %></h6>
  </div>
<% end %>
